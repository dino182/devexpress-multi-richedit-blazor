<RichEdit @ref="@_richEdit"
          @bind-DocumentBase64="@Model.DocumentContent"
          DocumentName="@Model.DocumentName" />

@code {
    [Parameter]
    public DataModel Model { get; set; }

    public Task ExportDocumentContent() => _richEdit.ExportDocumentBase64();
    
    public Task ResetDocumentContent() => _richEdit.SetDocumentBase64();

    private RichEdit _richEdit;
}
